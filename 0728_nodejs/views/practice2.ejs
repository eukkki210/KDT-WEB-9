    <script>
        $('.btn').click(function () {
            let name;
            if ($(this).hasClass('apple')) {
                name = 'apple';
            } else if ($(this).hasClass('banana')) {
                name = 'banana';
            } else if ($(this).hasClass('grape')) {
                name = 'grape';
            } else if ($(this).hasClass('peach')) {
                name = 'peach';
            }
            $('img').attr('src', `public/img/${name}.jpeg`);
        });
    </script>
