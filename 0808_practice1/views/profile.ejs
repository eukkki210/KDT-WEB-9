<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <title>Document</title>
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <form name="profile">
        <input type="hidden" name="id" id="id" value="<%= userInfo.id %>">
        <label for="userid">아이디: </label>
        <input type="text" name="userid" id="userid" value="<%= userInfo.userid %>">
        <br />
        <label for="name">이름: </label>
        <input type="text" name="name" id="name" value="<%= userInfo.name %>">
        <br />
        <label for="pw">비밀번호: </label>
        <input type="password" name="pw" id="pw" value="<%= userInfo.pw %>">
        <br />
        <button type="button" onclick="editProfile()">수정</button>
        <br />
        <button type="button" onclick="deleteProfile()">삭제</button>
        <br />
    </form>

    <script>
        function editProfile() {
            const form = document.forms['profile'];
            const data = {
                id: form.id.value,
                userid: form.userid.value,
                name: form.name.value,
                pw: form.pw.value,
            };

            console.log(data);

            axios({
                method: 'POST',
                url: '/user/profile/edit',
                data: data,
            }).then((res) => {
                if (res.data.result) {
                    window.location.reload();
                };
            });
        };

        function deleteProfile(id) {
            const form = document.forms['profile'];

            if (!confirm('삭제하시겠습니까?')) {
                return;
            }

            axios({
                method: 'POST',
                url: '/user/profile/delete',
                data: {
                    id: Number(id),
                },
            }).then(res => {
                console.log('res', res);
                if (res.data.result) {
                    window.location.reload();
                };
            });
        };
    </script>
</body>

</html>